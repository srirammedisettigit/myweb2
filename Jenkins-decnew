pipeline{
    agent any
    
    environment{
        PATH = "/opt/maven/bin:$PATH"
    }
    stages{
        stage("Git Checkout"){
            steps{
                git credentialsId: 'c402e3f0-ffc8-4f51-83ab-5ac80e91a85e', url: 'https://github.com/srirammedisettigit/myweb2.git'
            }
        }
        stage("Maven Build"){
            steps{
                sh "mvn clean package"
                sh "mv target/*.war target/myweb.war"
            }
        }
        stage("deploy-dev"){
            steps{
                sshagent(['06cc6e77-96d2-444d-b22d-da39936be9f3']) {
                sh """
                    scp -o StrictHostKeyChecking=no target/myweb.war ec2-user@35.171.166.192:/home/ec2-user/tomcat/webapps/

                    ssh ec2-user@35.171.166.192 /home/ec2-user/tomcat/bin/shutdown.sh
                    
                    ssh ec2-user@35.171.166.192 /home/ec2-user/tomcat/bin/startup.sh
                
                """
            }
            
            }
        }
    }
}
